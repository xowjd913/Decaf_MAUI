<?xml version="1.0" encoding="utf-8" ?>
<base:ContentPageBase xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"

             xmlns:base="clr-namespace:Decaf.Base.MVVM;assembly=Decaf.Base"

             x:Class="Decaf.OnBoarding.Views.OnBoardingPage"

             NavigationPage.HasNavigationBar="False"

             Title="OnBoardingPage">

    <Grid Margin="24, 10, 24, 28">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
            <VerticalStackLayout x:Name="verticalRoot"

                                 Grid.Row="0"

                                 VerticalOptions="FillAndExpand">

                <HorizontalStackLayout HorizontalOptions="End">
                    <BoxView BackgroundColor="Green"
                             WidthRequest="20"
                             HeightRequest="20"/>
                </HorizontalStackLayout>

                <Label Text="커피를 하루에 몇 잔&#10;마시나요?"
                       FontSize="28"
                       Margin="0, 40, 120, 24"/>

                <Frame HeightRequest="70"
                       Margin="0, 0, 0, 8"
                       BackgroundColor="#EEEEEE">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Label Grid.Column="0"
                               Text="3잔 이상"
                               FontSize="16"

                               HorizontalTextAlignment="Start"
                               VerticalTextAlignment="Center"/>
                        <CheckBox Grid.Column="1"

                                  WidthRequest="22"
                                  HeightRequest="22"/>
                    </Grid>
                </Frame>
                <Frame HeightRequest="70"
                       Margin="0, 0, 0, 8"
                       BackgroundColor="#EEEEEE">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Label Grid.Column="0"
                               Text="1잔 이상"
                               FontSize="16"

                               HorizontalTextAlignment="Start"
                               VerticalTextAlignment="Center"/>
                        <CheckBox Grid.Column="1"

                                  WidthRequest="22"
                                  HeightRequest="22"/>
                    </Grid>
                </Frame>
                <Frame HeightRequest="70"
                       Margin="0, 0, 0, 8"
                       BackgroundColor="#EEEEEE">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Label Grid.Column="0"
                               Text="아예 못 마심"
                               FontSize="16"

                               HorizontalTextAlignment="Start"
                               VerticalTextAlignment="Center"/>
                        <CheckBox Grid.Column="1"

                                  WidthRequest="22"
                                  HeightRequest="22"/>
                    </Grid>
                </Frame>
                <BoxView VerticalOptions="FillAndExpand"/>
                <!--<CarouselView Grid.Row="0">
                    <CarouselView.ItemTemplate>
                        <DataTemplate>
                            <VerticalStackLayout>

                            </VerticalStackLayout>
                        </DataTemplate>
                    </CarouselView.ItemTemplate>
                </CarouselView>-->
        </VerticalStackLayout>

        <BoxView Grid.Row="1"
                 BackgroundColor="Transparent"/>

        <Button Grid.Row="2"

                Text="Next"

                VerticalOptions="End"
                HorizontalOptions="Fill"/>
    </Grid>

</base:ContentPageBase>
